# Zorg dat Apache POST en OPTIONS toestaat
<Files "payment-proxy.php">
  <IfModule mod_authz_core.c>
    Require all granted
  </IfModule>
  <IfModule !mod_authz_core.c>
    Order allow,deny
    Allow from all
  </IfModule>
</Files>

<IfModule mod_rewrite.c>
  RewriteEngine On
  # Laat GET, POST en OPTIONS door
  RewriteCond %{REQUEST_METHOD} ^(GET|POST|OPTIONS)$
  RewriteRule ^ - [L]
</IfModule>

# Basisinstellingen
Options -Indexes
DirectoryIndex index.html
